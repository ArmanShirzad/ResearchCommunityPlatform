<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Research GeekClone</title>
    @*<script src="https://cdn.tailwindcss.com"></script>*@
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="~/css/HamBurger.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="flex flex-col h-full bg-gray-100  text-gray-900">
    <header>
        <div class="bg-gradient-to-r from-[#014aaa] to-[#2ab9fd]">
            <nav class="bg-blue-700">
                <div class="max-w-6xl mx-auto px-4">
                    <div class="flex justify-between">
                        <div class="flex space-x-4">
                            <!-- logo -->
                            <div>
                                <a href="#" class="flex items-center py-5 px-2 text-white">
                                    <span class="font-bold">Research Geek</span>
                                </a>
                            </div>
                            <!-- primary nav -->
                            <div class="hidden md:flex items-center space-x-1">
                                <a href="#" class="py-5 px-3 text-white">Communities</a>
                                <a href="#" class="py-5 px-3 text-white">My Dashboard</a>
                            </div>
                        </div>
                        <!-- secondary nav -->
                        <div class="hidden md:flex items-center space-x-1">
                            <button class="py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
                                Log in
                            </button>

                            <!-- Sign Up Button -->
                            <button class="py-2 px-4 bg-orange-400 text-white font-semibold rounded-lg shadow-md hover:bg-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-300 focus:ring-opacity-75">
                                Sign up
                            </button>
                        </div>
                        <!-- mobile button goes here -->
                        <div class="md:hidden flex items-center">
                            <button class="mobile-menu-button" onclick="toggleMobileMenu()">
                                <svg class="w-6 h-6 text-white" fill="none" strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" viewBox="0 0 24 24" stroke="currentColor">
                                    <path d="M4 6h16M4 12h16m-7 6h7"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- mobile menu -->
                <div class="mobile-menu hidden md:hidden" id="mobileMenu">
                    <a href="#" class="block py-2 px-4 text-sm hover:bg-blue-800">Communities</a>
                    <a href="#" class="block py-2 px-4 text-sm hover:bg-blue-800">My Dashboard</a>
                    <a href="#" class="block py-2 px-4 text-sm hover:bg-blue-800">Log in</a>
                    <a href="#" class="block py-2 px-4 text-sm hover:bg-blue-800">Sign up</a>
                </div>
            </nav>
            <div class="relative mt-6 max-w-lg mx-auto">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center">
                    <svg class="h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none">
                        <path d="M10 4a6 6 0 0112 0a6 6 0 01-12 0zm0 0c-4.5 0-8 3.5-8 8a8 8 0 0016 0c0-4.5-3.5-8-8-8z" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"></path>
                    </svg>
                </span>
                <input class="w-full border rounded-md pl-10 pr-4 py-2 focus:border-blue-500 focus:outline-none focus:shadow-outline" type="text" placeholder="Search records...">
            </div>
        </div>
    </header>
    <div class="flex-grow">
        @RenderBody() <!-- The individual views will be rendered here -->
    </div>
    <!-- First Footer -->
    <footer class="bg-[#0067c9]">
        <div class="container mx-auto py-4 flex flex-wrap justify-center gap-x-8 items-center text-white">

            <div class="flex flex-col md:flex-row">
                <div class="mb-4 md:mb-0 md:mr-8">
                    <!-- Column 1 Content -->
                    <h5 class="font-bold mb-2">About</h5>
                    <ul>
                        <li><a href="#">Policies</a></li>
                        <li><a href="#">Infrastructure</a></li>
                        <li><a href="#">Principles</a></li>
                        <li><a href="#">Projects</a></li>
                        <li><a href="#">Roadmap</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
                <!-- Repeat for other columns -->
            </div>
            <div class="flex flex-col md:flex-row">
                <div class="mb-4 md:mb-0 md:mr-8">
                    <!-- Column 2 Content -->
                    <h5 class="font-bold mb-2">Help</h5>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Docs</a></li>
                        <li><a href="#">Guides</a></li>
                        <li><a href="#">Support</a></li>
                    </ul>
                </div>
                <!-- Repeat for other columns -->
            </div>
            <!-- ... other columns ... -->
        </div>
    </footer>

    <!-- Second Footer -->
    <footer class="bg-[#0047a8]">
        <div class="container mx-auto py-4 text-white text-center">
            <!-- Content -->
        </div>
        <div class="bg-[#0045a2] w-full">
            <div class="container mx-auto py-4 text-white text-center">
                Powered by CERN Data Centre & InvenioRDM
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  
    <script>
        function toggleMobileMenu() {
            document.getElementById('mobileMenu').classList.toggle('hidden');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>