@model ResearchCommunityPlatform.Models.CreatePublicationViewModel
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="card mb-8">
        <h2 class="card-title">Get started!</h2>
        <p>Make your first upload</p>

        <!-- Removed the duplicate partial tag -->
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DOI"></label>
        <input asp-for="DOI" class="form-control" />
        <span asp-validation-for="DOI" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Authors"></label>
        <input asp-for="Authors" class="form-control" />
        <span asp-validation-for="Authors" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfPublish"></label>
        <input asp-for="DateOfPublish" class="form-control" />
        <span asp-validation-for="DateOfPublish" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PubType"></label>
        <select asp-for="PubType" class="form-control">
            <option>Journal</option>
            <option>Conference</option>
        </select>
        <span asp-validation-for="PubType" class="text-danger"></span>
    </div>
    <!-- Added file input field for file upload -->
    <div class="form-group">
        <label asp-for="Files">Select Files</label>
        <input asp-for="Files" type="file" class="form-control" multiple />
        <span asp-validation-for="Files" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
</form>
