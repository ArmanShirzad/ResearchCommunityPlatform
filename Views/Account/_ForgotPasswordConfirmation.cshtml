@{
    Layout = null;  // Ensures no layout is applied if you're using Layouts
}

<div class="text-center p-8">
    <h2 class="text-2xl font-bold mb-4">Forgot Password</h2>
    <p>If your email address exists in our system, we have sent a link to reset your password. Please check your email.</p>
    <button class="mt-4 p-2 bg-blue-500 text-white rounded hover:bg-blue-600" onclick="location.href='@Url.Action(" Login", "Account" )'">Return to Login</button>
</div>
