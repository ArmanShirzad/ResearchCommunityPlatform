@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/content.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-image: url('background-cover.jpg');
            background-size: cover;
            font-family: 'Arial', sans-serif;
        }

        .cover {
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            text-align: center;
            padding: 50px;
            width: 80%;
            max-width: 600px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .title {
            font-size: 36px;
            margin: 10px 0;
        }

        .subtitle {
            font-size: 20px;
            margin: 5px 0 20px;
        }

        .author {
            font-size: 18px;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="cover">
        <h1 class="title">The Journey Begins</h1>
        <h3 class="subtitle">Exploring the World of Creativity</h3>
        <p class="author">By [Author Name]</p>
    </div>
</body>
</html>
